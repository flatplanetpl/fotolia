<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="demo.xamarin.forms.DetailPage">
  <Grid Padding="10,10,10,10">
    
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <Image Source="{Binding Photo.PhotoUrl}" Grid.Column="0" WidthRequest="400"/>
      <StackLayout Grid.Row="1" Orientation="Vertical" Padding="5">
        
        <Label Text="{Binding Photo.Name}" FontAttributes="Bold" FontSize="24"/>
        <Label Text="{Binding Photo.Author}" TextColor="Orange" FontSize="24"/>
      </StackLayout>

    
  </Grid>
</ContentPage>