<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="demo.xamarin.forms.DetailPage">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid Grid.ColumnSpan="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <Image Source="{Binding User.LargeImage}" Grid.Column="0" WidthRequest="200"/>
      <StackLayout Grid.Column="1" Orientation="Vertical" Padding="5">
        
        <Label Text="{Binding User.Name.Title}"  />
        <Label Text="{Binding User.Name.First}" FontAttributes="Bold" FontSize="24"/>
        <Label Text="{Binding User.Name.Last}" FontAttributes="Bold" FontSize="24"/>
      </StackLayout>

    </Grid>
  </Grid>
</ContentPage>